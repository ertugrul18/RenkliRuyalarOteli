@model List<Musteri>
<a asp-action="Create" asp-controller="Musteri" class="btn btn-primary">Yeni Musteri</a>
<div class="card">
    <div class="card-header">
        <h3>Musteriler</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Ad Soyad</td>
                    <td>Cinsiyet</td>
                    <td>TcNo</td>
                    <td>Cep No</td>
                    <td>Kullanici Id</td>
                    <td>Status</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Musteri musteri in Model)
                {
                    <tr>
                        <td>@musteri.Ad  @musteri.Soyadi</td>
                        <td>@musteri.Cinsiyet</td>
                        <td>@musteri.MusteriTcNo</td>
                        <td>@musteri.CepNo</td>
                        <td>@musteri.KullaniciId</td>
                        <td>@musteri.Status</td>

                        <td><a asp-action="Update" asp-controller="Musteri" class="btn btn-success" asp-route-Id="@musteri.Id">Update</a> </td>
                        <td><a asp-action="Delete" asp-controller="Musteri" class="btn btn-danger" asp-route-Id="@musteri.Id">Delete</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>